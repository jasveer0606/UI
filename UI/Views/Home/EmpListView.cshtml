@model IEnumerable<UI.Employee>


<table class="table" id="tblEmployees">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDepartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

<tr>
    @using (Html.BeginForm())
    {
<td>
    @Html.TextBoxFor(Model => item.EmpID, new { @class = "form-control", @readonly = "readonly", Name = "EmpID", Id = "EmpID" })

</td>
                    <td>
                        @Html.DropDownListFor(Model => item.EmpDepartment, new SelectList(Enum.GetValues(typeof(UI.Department))), "Select Department", new { @class = "form-control", Name = "EmpDepartment", Id = "EmpDepartment" })
                    </td>
                                        <td>
                                            @Html.TextBoxFor(Model => item.EmpName, new { @class = "form-control", Name = "EmpName", Id = "EmpName" })
                                        </td>
                                                            <td>
                                                                @Html.TextBoxFor(Model => item.EmpSalary, new { @class = "form-control", Name = "EmpSalary", Id = "EmpSalary" })
                                                            </td>
                                                                                <td>
                                                                                    <input type="submit" value="Update" formmethod="post" />
                                                                                </td>}
</tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
